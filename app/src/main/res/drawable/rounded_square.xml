<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/gray"/>
            <stroke
                android:color="@color/box_darkgray"
                android:width="1dp"/>
            <corners
                android:radius="50dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/box_darkgray"/>
            <stroke
                android:color="@color/box_darkgray"
                android:width="1dp"/>
            <corners
                android:radius="50dp"/>
        </shape>
    </item>

</selector>