<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <include layout="@layout/layout_top_edittoolbar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_container">

            <com.eklee.timestamptable.Utils.SquareImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/editImage"/>

            <TextView
                android:id="@+id/selected_sticker"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/selected_timeStamp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:textColor="@color/white"
                android:shadowColor="#33000000"
                android:shadowDx="7.0"
                android:shadowDy="7.0"
                android:shadowRadius="2.0"
                android:textAlignment="center"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/custom_edit_text"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:maxLength="50"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/chart"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/edit_tab"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:tabSelectedTextColor="@color/black"
            app:tabTextColor="@color/gray"
            app:tabIndicatorColor="@color/main_yellow"
            app:tabIndicatorHeight="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/style_container"
            android:visibility="visible">

            <include layout="@layout/layout_editstyle_style"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/style_container1"
            android:visibility="gone">

            <include layout="@layout/layout_editstyle_font"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/style_container2"
            android:visibility="gone">

            <include layout="@layout/layout_editstyle_sticker"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/style_container3"
            android:visibility="gone">

            <include layout="@layout/layout_editstyle_textedit"/>

        </RelativeLayout>


</LinearLayout>